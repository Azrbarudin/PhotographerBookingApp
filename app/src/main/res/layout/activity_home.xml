<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/autour_one"
        android:text="FreeGrapher"
        android:textColor="@color/teal_700"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv1"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/autour_one"
        android:text="Booking App"
        android:textColor="@color/teal_700"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:layout_below="@id/tv2"
        android:src="@drawable/ic_camera_flat"/>

    <Button
        android:id="@+id/btnClient"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:drawableLeft="@drawable/ic_name"
        android:drawablePadding="2dp"
        android:fontFamily="@font/autour_one"
        android:text="Client"
        app:backgroundTint="#009688" />

    <Button
        android:id="@+id/btnPhotographer"
        android:layout_below="@id/btnClient"
        android:layout_centerHorizontal="true"
        android:layout_width="205dp"
        android:drawableLeft="@drawable/ic_pg"
        android:drawablePadding="2dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/autour_one"
        android:text="Photographer"
        app:backgroundTint="#009688" />
</RelativeLayout>